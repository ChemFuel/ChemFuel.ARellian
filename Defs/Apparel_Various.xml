<?xml version="1.0" encoding="utf-8"?>
<Defs>
<!--================ Industrial Apparel ================-->

<!--======== Service Uniform ========-->

	<ThingDef ParentName="ApparelMakeableBase" Name="CFAR_UniformBase">
		<techLevel>Industrial</techLevel>
		<defName>Apparel_CFAR_ReichswehrUniform</defName>
		<label>Reichswehr uniform</label>
		<description>WIP</description>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
			<displayPriority>1172</displayPriority>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Arellian/Apparel/ServiceUniform/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costStuffCount>100</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<thingCategories>
			<li>ApparelMisc</li>
		</thingCategories>
		<statBases>
			<WorkToMake>10000</WorkToMake>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>1.25</Mass>
			<StuffEffectMultiplierArmor>0.20</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.75</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
			<Insulation_Cold>5</Insulation_Cold>
			<EquipDelay>6</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MentalBreakThreshold>-0.1</MentalBreakThreshold>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Arellian/Apparel/ServiceUniform/Apparel</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>CFAR_Uniform</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
		<tradeTags>
			<li>BasicClothing</li>
			<li>CFAR_Apparel</li>
		</tradeTags>
	</ThingDef>

<!--================ Industrial Armor ================-->

<!--======== Service Armor Base ========-->

	<ThingDef Name="CFAR_ArmorBase" ParentName="ArmorMachineableBase" Abstract="True">
		<techLevel>Spacer</techLevel>
		<recipeMaker>
			<researchPrerequisites>
				<li>FlakArmor</li>
				<li MayRequire="Ludeon.Rimworld.Odyssey">OrbitalTech</li>
			</researchPrerequisites>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
		</recipeMaker>
		<statBases>
			<Flammability>0.4</Flammability>
		</statBases>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<apparel>
			<wearPerDay>0.02</wearPerDay>
			<layers>
				<li>Middle</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	    <tradeTags>
			<li>Armor</li>
		</tradeTags>
	</ThingDef>

<!--======== Reichswehr Armor - Universal ========-->

	<ThingDef ParentName="CFAR_ArmorBase">
		<defName>Apparel_CFAR_ReichswehrArmor</defName>
		<label>Reichswehr armor</label>
		<description>WIP</description>
		<recipeMaker>
			<displayPriority>1163</displayPriority>
		</recipeMaker>
		<costList>
			<Steel>50</Steel>
			<Plasteel>30</Plasteel>
			<ComponentIndustrial>1</ComponentIndustrial>
			<ComponentSpacer>1</ComponentSpacer>
		</costList>
		<graphicData>
			<texPath>Things/Pawn/Arellian/Apparel/ServiceArmor/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.90</drawSize>
		</graphicData>
		<statBases>
			<WorkToMake>36000</WorkToMake>
			<MaxHitPoints>360</MaxHitPoints>
			<ArmorRating_Sharp>0.80</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.35</ArmorRating_Blunt>
			<ArmorRating_Heat>0.50</ArmorRating_Heat>
			<Insulation_Cold>50</Insulation_Cold>
			<Insulation_Heat>0</Insulation_Heat>
			<Mass>10</Mass>
			<EquipDelay>10</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<StaggerDurationFactor>-0.25</StaggerDurationFactor>
			<ToxicEnvironmentResistance>0.15</ToxicEnvironmentResistance>
			<VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.30</VacuumResistance>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.3</SlaveSuppressionOffset>
			<MoveSpeed>-0.24</MoveSpeed>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Torso</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Arellian/Apparel/ServiceArmor/Apparel</wornGraphicPath>
			<tags>
				<li>CFAR_Soldier</li>
				<li>CFAR_Officer</li>
				<li>CFAR_HighOfficer</li>
			</tags>
		</apparel>
	</ThingDef>
</Defs>
