	<ThingDef ParentName="Base_CFAR_GunIndustrial">
		<defName>Gun_CFAR_Pistol</defName>
		<label>Arellian Autopistol</label>
		<description>A Reichswehr standard-issue automatic sidearm, built for reliability under shipboard and terrestrial combat conditions.</description>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponRanged/CFAR_Pistol</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconScale>1.5</uiIconScale>
		<soundInteract>Interact_Autopistol</soundInteract>
		<recipeMaker>
			<researchPrerequisite>BlowbackOperation</researchPrerequisite>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
			<displayPriority>1170</displayPriority>
		</recipeMaker>
		<statBases>
			<WorkToMake>8000</WorkToMake>
			<Mass>1.0</Mass>
			<AccuracyTouch>0.95</AccuracyTouch>
